const handleSearch = (event) => {
  // Check if the Ag Grid API is defined.
  if (!event.api) {
    return;
  }

  const searchQuery = event.target.value;

  // Get the Ag Grid API.
  const api = event.api;

  // Filter the rows in the grid.
  api.setFilterModel({
    caseId: {
      filterType: "contains",
      filter: searchQuery,
    },
  });

  // Highlight the row that contains the Case ID.
  api.setFocusedCell(0, 0);
};
